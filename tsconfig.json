{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "watch": true,
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "index.ts", "index.ts"],
  "exclude": ["node_modules"]
}
