{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ES6",
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "watch": true,
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules"]
}
